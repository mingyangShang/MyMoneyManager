<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content" android:layout_width="400dip"
		android:layout_gravity="center_horizontal" android:paddingLeft="12dp"
		android:paddingRight="12dp" android:paddingTop="10dp" android:id="@+id/timePicker1">

		<com.amo.demo.wheelview.WheelView
			android:id="@+id/year" android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:layout_weight="1"/>
		<com.amo.demo.wheelview.WheelView
			android:id="@+id/month" android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:layout_weight="1"/>
		<com.amo.demo.wheelview.WheelView
			android:id="@+id/day" android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:layout_weight="1"/>
		</LinearLayout>